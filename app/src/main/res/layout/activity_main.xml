<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<Button
		android:id="@+id/get_joke_btn"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="Get joke"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_margin="16dp"/>
	<Button
		android:id="@+id/get_rxjoke_btn"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="Get encrypted rxjoke"
		app:layout_constraintStart_toStartOf="@id/get_joke_btn"
		app:layout_constraintEnd_toEndOf="@id/get_joke_btn"
		app:layout_constraintTop_toBottomOf="@id/get_joke_btn" />
	<Button
		android:id="@+id/decrypt_btn"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="Decrypt joke"
		app:layout_constraintStart_toStartOf="@id/get_rxjoke_btn"
		app:layout_constraintEnd_toEndOf="@id/get_rxjoke_btn"
		app:layout_constraintTop_toBottomOf="@id/get_rxjoke_btn"
		android:clickable="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>